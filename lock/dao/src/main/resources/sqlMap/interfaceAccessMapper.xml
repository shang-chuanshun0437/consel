<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weiyi.lock.dao.mapper.InterfaceAccessMapper" >
    <resultMap id="BaseResultMap" type="com.weiyi.lock.dao.entity.InterfaceAccess" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_phone" property="userPhone" jdbcType="BIGINT" />
        <result column="interface_name" property="interfaceName" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="BIGINT" />
        <result column="ip" property="ip" jdbcType="VARCHAR" />
        <result column="url" property="url" jdbcType="VARCHAR" />
        <result column="consume_time" property="consumeTime" jdbcType="BIGINT" />
        <result column="interface_count" property="interfaceCount" jdbcType="BIGINT" />
        <result column="average_time" property="averageTime" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="VARCHAR" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="addRecord" parameterType="com.weiyi.lock.dao.entity.InterfaceAccess">
       INSERT INTO
       		interface_access
       		(user_phone,interface_name,status,consume_time,remark,create_time,url,ip,interface_count,average_time)
       	VALUES
       		(#{userPhone}, #{interfaceName},#{status}, #{consumeTime},#{remark},#{createTime},#{url},#{ip},#{interfaceCount},#{averageTime})
    </insert>

    <select id="queryListCount" parameterType="com.weiyi.lock.dao.request.GetInterfaceAccessRequest" resultType="int">
        select count(*)
        from interface_access
        <where>
            <if test="userPhone != null and userPhone != ''">
                user_phone = #{userPhone}
            </if>
            <if test="interfaceName != null and interfaceName != ''">
                AND interface_name LIKE concat(concat('%',#{interfaceName}),'%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>

    </select>

    <select id="queryList" parameterType="com.weiyi.lock.dao.request.GetInterfaceAccessRequest" resultType="com.weiyi.lock.dao.entity.InterfaceAccess">
        select *
        from interface_access
        <where>
            <if test="userPhone != null and userPhone != ''">
                user_phone = #{userPhone}
            </if>
            <if test="interfaceName != null and interfaceName != ''">
                AND interface_name LIKE concat(concat('%',#{interfaceName}),'%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        limit #{currentPage},10
    </select>
    <update id="updateRecord" parameterType="com.weiyi.lock.dao.entity.InterfaceAccess">
        update interface_access
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="ip != null">
                ip = #{ip},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="interfaceCount != null">
                interface_count = #{interfaceCount},
            </if>
            <if test="averageTime != null">
                average_time = #{averageTime},
            </if>
            <if test="consumeTime != null">
                consume_time = #{consumeTime},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>